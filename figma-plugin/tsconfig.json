{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "lib": ["ES2017"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "types": [
      "@figma/plugin-typings"
    ]
  },
  "include": ["code.ts"]
} 